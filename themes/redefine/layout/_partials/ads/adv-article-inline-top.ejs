<!-- google ads -->
<% if (theme.google_ads.enable) { %>
    <ul class="ads">
        <% for (var i in theme.google_ads.article_inline_top_ads){ %>
            <li>
                <ins class="adsbygoogle"
                    style="<%= theme.google_ads.article_inline_top_ads[i].style %>"
                    data-ad-client="<%= theme.google_ads.client %>"
                    data-ad-slot="<%= theme.google_ads.article_inline_top_ads[i].slot %>"
                    data-ad-format="auto"
                    data-full-width-responsive="true"></ins>
            </li>
        <% } %>
    </ul>
<% } %>